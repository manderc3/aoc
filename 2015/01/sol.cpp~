#include <fstream>
#include <iostream>

int main()
{
    std::ifstream input("input.txt");
    std::string content((std::istreambuf_iterator<char>(input)), (std::istreambuf_iterator<char>()));

    int floor { 0 };
    
    for (const auto i : content)
    {
	std::cout << i << '\n';
	if (i == '(') ++floor;
	else          --floor;
    }

    std::cout << "You are on floor " << floor << "\n"; 
}
